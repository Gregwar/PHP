{% extends 'AppBundle::layout.html.twig' %}

{% block contents %}
    <section>
    	<div class="container">
    		<h3>Identification</h3>
    		<form class="form-horizontal" method="post" action="{{ path('login_check') }}">
			 <div class="form-group">
			    <label for="inputLogin" class="col-sm-2 control-label">Identifiant</label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputLogin" name="_username"
			       placeholder="Identifiant">
			    </div>
			  </div>

			 <div class="form-group">
			    <label for="inputPassword" class="col-sm-2 control-label">Mot de passe</label>
			    <div class="col-sm-10">
			      <input type="password" class="form-control" id="inputPassword" name="_password"
			       placeholder="Mot de passe">
			    </div>
			 </div>

			 <div class="form-group">
			    <label class="col-sm-2"></label>
			    <div class="col-sm-10">
			      <input type="submit" value="Envoyer" class="form-control btn btn-primary" />
			    </div>
			 </div>
			</form>
    </section>
{% endblock %}