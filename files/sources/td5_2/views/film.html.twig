{% extends 'layout.html.twig' %}

{% block content %}

{% if film %}
<div class="fiche">
    <img src="{{ film.image }}" />
    <h2>{{ film.nom }} - Fiche film</h2>
    <b>Genre: {{ film.genre_nom }}</b>
    <p class="description">
        {{ film.description }}
    </p>
</div>
{% else %}
<h2>Fiche film</h2>

Film non trouvé!
{% endif %}

<div class="casting">
    <h2>Casting</h2>
    
    {# A adapter pour Doctrine! #}
    <div class="acteur">
        <img src="image" width="64" />
        <h3>Prénom nom</h3>
        <em>dans le role de</em>
        <h3>role</h3>
    </div>
</div>

<div class="commentaires">
    <h2>Critiques</h2>
    <em>A venir</em>
    <div class="ajout">
        <h2>Ajouter votre critique</h2>
        <form method="post" />
            Nom: <br/><input type="text" name="nom" /><br />
            Note: <br/><input size="3" type="number" name="note" />/5<Br/>    
            Critique: <br/>
            <textarea rows="5" name="critique"></textarea>
            <hr/>
            <input type="submit" value="Envoyer" />
        </form>
    </div>
</div>

{% endblock %}
